@{
    ViewData["Title"] = "Reportes";
    var clientes = ViewBag.Clientes as IEnumerable<Facturacion.Models.Cliente>;
    var productos = ViewBag.Productos as IEnumerable<Facturacion.Models.Producto>;
}

<h2>Reportes</h2>

<div class="row">
    <div class="col-md-4">
        <h3>Facturas por Periodo</h3>
        <form asp-action="FacturasPorPeriodo" method="get">
            <div class="form-group">
                <label for="inicio">Fecha de Inicio:</label>
                <input type="date" id="inicio" name="inicio" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="fin">Fecha de Fin:</label>
                <input type="date" id="fin" name="fin" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Generar Reporte</button>
        </form>
    </div>

    <div class="col-md-4">
        <h3>Ventas por Cliente</h3>
        <form asp-action="VentasPorCliente" method="get">
            <div class="form-group">
                <label for="clienteNombre">Nombre del Cliente:</label>
                <select id="clienteNombre" name="clienteNombre" class="form-control" required>
                    <option value="">Seleccione un Cliente</option>
                    @foreach (var cliente in clientes)
                    {
                        <option value="@cliente.Nombre">@cliente.Nombre</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Generar Reporte</button>
        </form>
    </div>

    <div class="col-md-4">
        <h3>Ventas por Producto</h3>
        <form asp-action="VentasPorProducto" method="get">
            <div class="form-group">
                <label for="productoNombre">Nombre del Producto:</label>
                <select id="productoNombre" name="productoNombre" class="form-control" required>
                    <option value="">Seleccione un Producto</option>
                    @foreach (var producto in productos)
                    {
                        <option value="@producto.Nombre">@producto.Nombre</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Generar Reporte</button>
        </form>
    </div>
</div>
