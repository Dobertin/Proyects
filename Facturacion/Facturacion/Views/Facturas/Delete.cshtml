@model Facturacion.Models.Factura

<h2>Eliminar Factura</h2>

<h3>¿Está seguro de que desea eliminar esta factura?</h3>

<div>
    <h4>Factura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ID</dd>
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.ClienteID</dd>
        <dt class="col-sm-2">Fecha de Emisión</dt>
        <dd class="col-sm-10">@Model.FechaEmision.ToShortDateString()</dd>
        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
