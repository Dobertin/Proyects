@model Facturacion.Models.Producto

<h2>Eliminar Producto</h2>

<h3>¿Está seguro de que desea eliminar este producto?</h3>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
        <dt class="col-sm-2">Precio Base</dt>
        <dd class="col-sm-10">@Model.PrecioBase</dd>
        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
        <dt class="col-sm-2">Fecha de Creación</dt>
        <dd class="col-sm-10">@Model.FechaCreacion.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
