@model Facturacion.Models.Producto

<h2>Asignar Categoría a Producto</h2>

<form asp-action="AsignarCategoria" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Categoria"></label>
        <input asp-for="Categoria" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Asignar Categoría</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
