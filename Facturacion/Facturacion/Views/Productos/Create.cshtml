@model Facturacion.Models.Producto

<h2>Añadir Producto</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PrecioBase"></label>
        <input asp-for="PrecioBase" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Categoria"></label>
        <input asp-for="Categoria" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
