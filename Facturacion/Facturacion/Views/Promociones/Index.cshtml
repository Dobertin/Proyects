@model IEnumerable<Facturacion.Models.Promocion>

<h2>Promociones</h2>

<p>
    <a href="@Url.Action("Create")">Añadir Promoción</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Tipo</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Tipo</td>
                <td>@item.Valor</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ID })">Editar</a> |
                    <a href="@Url.Action("Delete", new { id = item.ID })">Eliminar</a> |
                    <a href="@Url.Action("AsignarProductos", new { id = item.ID })">Asignar Productos</a>
                </td>
            </tr>
        }
    </tbody>
</table>
