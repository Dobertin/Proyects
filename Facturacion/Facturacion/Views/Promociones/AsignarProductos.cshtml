@model Facturacion.Models.Promocion
@{
    ViewBag.Title = "Asignar Productos a Promoción";
}

<h2>Asignar Productos a Promoción</h2>

<form asp-action="AsignarProductos" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Productos</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Seleccionar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in ViewBag.Productos)
                {
                    <tr>
                        <td>@producto.Nombre</td>
                        <td>
                            <input type="checkbox" name="productoIds" value="@producto.ID" @(Model.ProductoIDs.Contains(producto.ID) ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Productos</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
